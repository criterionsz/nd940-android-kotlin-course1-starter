<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <!--    I use  linearlayout because structure is not complex, i have only 4 views
    which under each other -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorGray"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/description_first"
            android:textColor="@color/colorDarkGray"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/shoestore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="sans-serif-smallcaps"
            android:text="@string/shoestore"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="30sp" />


        <TextView
            android:id="@+id/info1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:text="@string/description_second"
            android:textColor="@color/colorDarkGray"
            android:textSize="20sp" />

        <Button
            android:id="@+id/continue_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="50dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="80dp"
            android:background="@color/colorPrimary"
            android:text="@string/continue_button"
            android:textColor="@color/colorWhite" />

    </LinearLayout>
</layout>